general {
    colors = true
    interval = 5
    color_good = "#A3BE8C"
    color_bad = "#BF616A"
    color_degraded = "#BF616A"
    output_format = "i3bar"
}

order += "disk /"
order += "ethernet enp4s0"
order += "cpu_usage"
order += "wireless wlp4s0"
order += "volume master"
order += "battery 0"
order += "tztime local"

wireless wlp4s0 {
    format_up = "Wifi: %essid:%quality"
    format_down = "Wifi: Down"
}

volume master {
    format = "Vol: %volume"
    format_muted = "muted"
    device = "default"
    mixer = "Master"
    mixer_idx = 0
 }

disk "/" {
   format = "Disk: %free"
}

# if you use %speed, i3status requires the cap_net_admin capability
ethernet enp4s0 {
    format_up = "Eth: up (%speed)"
    format_down = "Eth: down"
}

tztime local {
   format = "%d/%m/%y %l:%M:%p "
}

battery 0 {
    format = "%status %percentage"
    format_down = "No battery"
    status_chr = "Charging:"
    status_bat = "Battery:"
    path = "/sys/class/power_supply/BAT%d/uevent"
    low_threshold = 10
}

cpu_usage {
    format = "CPU: %usage"
}
